<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root minHeight="200.0" minWidth="449.0" title="Minesweeper" type="Stage" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <scene>
      <Scene>
         <VBox prefHeight="85.0" prefWidth="449.0">
            <children>
               <MenuBar fx:id="menuBar">
                 <menus>
                   <Menu mnemonicParsing="false" text="Setting">
                     <items>
                       <MenuItem mnemonicParsing="false" text="Close" />
                     </items>
                   </Menu>
                   <Menu mnemonicParsing="false" text="Highscore">
                     <items>
                       <MenuItem mnemonicParsing="false" text="Delete" />
                     </items>
                   </Menu>
                     <Menu mnemonicParsing="false" text="Help">
                        <items>
                           <MenuItem mnemonicParsing="false" text="Delete" />
                        </items>
                     </Menu>
                 </menus>
               </MenuBar>
               <StackPane fx:id="infoDisplayPlaceholder" maxHeight="50.0" minHeight="50.0" prefHeight="50.0" VBox.vgrow="NEVER">
                  <opaqueInsets>
                     <Insets />
                  </opaqueInsets>
                  <padding>
                     <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                  </padding>
               </StackPane>
               <StackPane fx:id="boardPlaceholder" VBox.vgrow="ALWAYS">
                  <padding>
                     <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                  </padding>
               </StackPane>
            </children>
         </VBox>
         <stylesheets>
            <URL value="@DarkTheme.css" />
            <URL value="@Extensions.css" />
         </stylesheets>
      </Scene>
   </scene>
</fx:root>
